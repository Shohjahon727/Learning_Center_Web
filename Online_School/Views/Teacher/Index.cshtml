@using Online_School.Entities
@model IEnumerable<Teacher>



<div class="row pb-3">
	@foreach (var teacher in Model)
	{
		<div class="col-lg-3 col-sm-6" >
			<div class="row p-2">
				<div class="col-12 p-1 mb-0">
					<div class="card-border-0 p-3  shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="text-align: center;">
						<img src="@teacher.ImageUrl" class="card-img-top rounded " style="width: 250px; height: 280px; object-fit: cover;" />
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@teacher.FullName</p>
								<p class="card-title text-warning text-center"> <b>@teacher.Subject</b></p>
							</div>
							<div>
								<a asp-controller="Teacher" asp-action="Details"
								   class="btn btn-primary bg-gradient border-0 form-control mt-2">
									Details
								</a>
							</div>

						</div>
						
					</div>
				</div>
			</div>
		</div>
	}
</div>